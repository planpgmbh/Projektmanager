{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist/backend",
    "rootDir": "./",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "backend/src/**/*",
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}